# Production Environment Configuration
# Plant Monitoring System with AI Integration

# Server Configuration
NODE_ENV=production
PORT=3010
AI_SERVICE_PORT=3001

# Service URLs
MAIN_SERVICE_URL=http://localhost:3010
AI_SERVICE_URL=http://localhost:3001
FRONTEND_URL=https://your-domain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/plant_monitoring_prod
DB_HOST=localhost
DB_PORT=5432
DB_USER=plant_monitoring_user
DB_PASSWORD=your_secure_password
DB_NAME=plant_monitoring_prod
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=20

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=Plant Monitoring System <noreply@your-domain.com>

# OpenRouter API (AI Service)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=mistralai/mistral-7b-instruct
OPENROUTER_TIMEOUT=30000

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_TIMEOUT=5000

# MQTT Configuration
MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=mqtt_user
MQTT_PASSWORD=mqtt_password
MQTT_CLIENT_ID=plant-monitoring-system
USE_AWS_IOT=false

# AWS IoT Configuration (if using AWS IoT)
AWS_IOT_ENDPOINT=your-iot-endpoint.iot.region.amazonaws.com
AWS_PRIVATE_KEY_PATH=./certs/private.pem.key
AWS_CERT_PATH=./certs/certificate.pem.crt
AWS_ROOT_CA_PATH=./certs/AmazonRootCA1.pem
AWS_REGION=us-east-1

# Payment Gateway Configuration
VNPAY_TMN_CODE=your_vnpay_terminal_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=https://your-domain.com/payment/vnpay-return
VNPAY_IPN_URL=https://your-domain.com/payment/vnpay-ipn

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://your-domain.com
HELMET_ENABLED=true
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5
LOG_DIRECTORY=./logs

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DIRECTORY=./uploads

# AI Model Configuration
AI_MODEL_CACHE_SIZE=3
AI_MODEL_TIMEOUT=30000
AI_CONFIDENCE_THRESHOLD=0.7

# Performance Configuration
PERFORMANCE_MONITORING=true
PERFORMANCE_ALERT_THRESHOLD=5000
MEMORY_ALERT_THRESHOLD=512

# Data Retention Configuration
DATA_RETENTION_ENABLED=true
CHAT_HISTORY_RETENTION_DAYS=90
IMAGE_RETENTION_DAYS=365
LOG_RETENTION_DAYS=30
ANALYTICS_RETENTION_DAYS=730

# Privacy Configuration
PRIVACY_COMPLIANCE=true
DATA_ENCRYPTION_KEY=your_32_character_encryption_key_here
GDPR_COMPLIANCE=true
DATA_ANONYMIZATION=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60000
MQTT_RECONNECT_INTERVAL=5000
SERVICE_TIMEOUT=30000

# Feature Flags
FEATURE_AI_CHATBOT=true
FEATURE_DISEASE_DETECTION=true
FEATURE_IRRIGATION_PREDICTION=true
FEATURE_REAL_TIME_MONITORING=true
FEATURE_PREMIUM_FEATURES=true
FEATURE_ANALYTICS=true

# SSL Configuration (if using HTTPS)
SSL_ENABLED=true
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=./backups

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL=true
NOTIFICATION_PUSH=false
NOTIFICATION_SMS=false

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=your_analytics_tracking_id
ANALYTICS_SAMPLE_RATE=100