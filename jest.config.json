{
  "testEnvironment": "node",
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "<rootDir>/tests/**/*.test.js"
  ],
  "moduleNameMapper": {
    "dateformat": "<rootDir>/__mocks__/dateformat.js"
  },
  "transform": {
    "^.+\\.[t|j]sx?$": "babel-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(dateformat)/)"
  ],
  "collectCoverageFrom": [
    "controllers/**/*.js",
    "models/**/*.js",
    "routes/**/*.js",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ]
}
