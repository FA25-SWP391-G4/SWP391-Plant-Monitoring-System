# ============================================================================
# PLANT MONITORING SYSTEM - ENVIRONMENT CONFIGURATION
# ============================================================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=plant_monitoring
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1h

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Payment Configuration (VNPay)
VNP_TMN_CODE=your_vnpay_code
VNP_HASH_SECRET=your_vnpay_secret
VNP_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNP_RETURN_URL=http://localhost:3000/payment/return

# ============================================================================
# AI FEATURES CONFIGURATION (PREMIUM FEATURES)
# ============================================================================

# OpenAI API Configuration (for AI Chatbot and Advanced Analysis)
OPENAI_API_KEY=your_openai_api_key_here

# AI Service Configuration
AI_MODEL_TEMPERATURE=0.7
AI_MAX_TOKENS=500
AI_MODEL_NAME=gpt-3.5-turbo

# AI Prediction Configuration
AI_PREDICTION_DAYS_AHEAD=7
AI_MIN_DATA_POINTS=10
AI_CONFIDENCE_THRESHOLD=0.3

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=info